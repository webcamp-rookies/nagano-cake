
<div class="container">
        <h2>商品新規登録</h2>
        <%= render 'product_errors', product: @product %>
        <%= form_with model:@product,url:admin_products_path,local:true do |f| %>
    <div class="row">
        <div class="col-lg-5">
            <p>商品画像</p>
            <%= attachment_image_tag @product, :image, size:'250x250', fallback: 'no_image.jpg',size: "250x250" %>
            <%= f.attachment_field :image %>
        </div>
        <div class="col-lg-7">
            <table class="table">
                <tr>
                    <td>商品名</td>
                    <td><%= f.text_field :name %></td>
                </tr>
                <tr>
                    <td>商品説明</td>
                    <td><%= f.text_area :introduction %></td>
                </tr>
                <tr>
                    <td>ジャンル</td>
                    <td><%= f.collection_select :genre_id, Genre.all, :id,:name,{prompt: "--選択してください--"} %></td>
                </tr>
                <tr>
                    <td>税抜価格</td>
                    <td><%= f.text_field :price %>円</td>
                </tr>
                <tr>
                    <td>販売ステータス</td>
                    <td><%= f.select :is_active,[["販売中",true],["売り切れ",false]],include_blank: "選択して下さい" %></td>
                </tr>
                <tr>
                    <td><%= f.submit "新規登録", class: "btn btn-primary text-right" %></td>
                <tr>
            <% end %>
            </table>
        </div>
    </div>
</div>
