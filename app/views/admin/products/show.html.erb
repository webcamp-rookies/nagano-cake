<div class="container">
  <div class="row">
    <h1>商品詳細</h1>
    <div class="col-lg-5">
      <!--<%#= attachment_image_tag @product, :image,format: 'jpeg',fallback: "no_image.jpg",size"100x100" %>-->
    </div>
    <div class="col-lg-7">
      <table>
        <tr>
          <td>商品名</td>
          <td><%=  @product.name %></td>
        </tr>
            <tr>
          <td>商品説明</td>
          <td><%= @product.introduction %></td>
        </tr>
            <tr>
          <td>ジャンル</td>
          <td><%= @product.genre_id %></td>
        </tr>
            <tr>
          <td>税込価格（税抜価格）</td>
          <td><%= @product.price %></td>
        </tr>
            <tr>
          <td>販売ステータス</td>
          <td><%= @product.is_active %></td>
        </tr>
      </table>
      <%= link_to "編集する",edit_admin_product_path(@product) %>
    </div>
  </div>    
</div>