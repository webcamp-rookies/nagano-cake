<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
    <div class="col-xs-4">
      <%= attachment_image_tag @product, :image, size:'250x250', fallback: 'no_image.jpg',size: "250x250" %>
    </div>
    <div class="col-xs-6">

      <div>
        <p><strong class="col-xs-2">商品名</strong><%= @product.name %></p>
      </div>
      <br>
      <div>
          <p><strong class="col-xs-2">商品説明</strong><%= @product.introduction %></p>
      </div>
      <br>
      <div>
          <p><strong class="col-xs-2">ジャンル</strong><%= @product.genre.name %></p>
      </div>
      <br>
      <div>
          <p><strong class="col-xs-4">税込価格(税抜価格)</strong>¥<%= @product.price.to_s(:delimited) %></p>
      </div>
      <br>
      <div>
      <p><strong class="col-xs-3">販売ステータス</strong>
      <% if @product.is_active == true %>
        <%= "販売中" %>
      <% else %>
        <%=  "売り切れ" %>
      <% end %>
      <br>
      </div>
      <div class="text-right">
        <%= link_to "編集する",edit_admin_product_path(@product), class:"btn btn-primary" %>
      </div>
    </div>
    <div class="col-xs-2"></div>
  </div>
</div>