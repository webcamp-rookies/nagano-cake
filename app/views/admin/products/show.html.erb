<div class="container">
  <div class="row">
    <p id = "notice">
     <%= notice %>
      </p>
    <h2>商品詳細</h2>
    <div class="col-lg-5">
      <!--<%#= attachment_image_tag @product, :image,format: 'jpeg',fallback: "no_image.jpg",size"100x100" %>-->
    </div>
    <div class="col-lg-7">
      <table>
        <tr>
          <td>商品名</td>
          <td><%=  @product.name %></td>
        </tr>
            <tr>
          <td>商品説明</td>
          <td><%= @product.introduction %></td>
        </tr>
            <tr>
          <td>ジャンル</td>
          <td>
            <% if @product.genre_id == 1 %>
            <%= "ケーキ" %>
            <% elsif @product.genre_id == 2 %>
            <%= "プリン" %>
            <% elsif @product.genre_id == 3 %>
            <%= "焼き菓子" %>
            <% elsif @product.genre_id == 4 %>
            <%= "キャンディ" %>
            <% end %>
          </td>
        </tr>
            <tr>
          <td>税込価格（税抜価格）</td>
          <td><%= @product.price %></td>
        </tr>
            <tr>
          <td>販売ステータス</td>
          <td>
            <% if @product.is_active == true %>
              <%= "販売中" %>
              <% else %>
              <%=  "売り切れ" %>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "編集する",edit_admin_product_path(@product) %>
    </div>
  </div>
</div>