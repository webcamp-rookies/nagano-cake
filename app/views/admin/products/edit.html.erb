<div class="container">
  <div class="row">
    <h2>商品編集</h2>
    <%= render 'product_errors', product: @product %>
    <%= form_with model:@product,url:admin_product_path,local:true do |f| %>
    <div class="col-lg-5">
      <%= attachment_image_tag @product, :image, size:'250x250', fallback: 'no_image.jpg',size: "250x250" %>
      <%= f.attachment_field :image %>
    </div>
    <div class="col-lg-7">
      <table class="table">
        <tr>
          <td>商品名</td>
          <td><%=  f.text_field :name %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
            <td> <%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt: @product.genre_id} %>
        </tr>
        <tr>
          <td>税込価格（税抜価格）</td>
          <td><%= f.text_field :price %></td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
            <%= f.select :is_active,[["販売中",true],["売り切れ",false]]%>
          </td>
        </tr>
        <tr>
          <td><%= f.submit "変更を保存" , class: "btn btn-primary"%></td>
        <tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
