<div class="container">
  <div class="row">
    <h2>商品編集</h2>
    <%= render 'product_errors', product: @product %>
    <%= form_with model:@product,url:admin_product_path,local:true do |f| %>
    <div class="col-lg-4">
      <%= attachment_image_tag @product, :image, size:'250x250', fallback: 'no_image.jpg',size: "250x250" %>
      <%= f.attachment_field :image %>
    </div>
    <div class="col-lg-6">
        <div class="form-group">
          <%= f.label:商品名, class:"col-xs-2" %>
          <%=  f.text_field :name, size:"56x5" %>
        </div>

        <div class="form-group">
          <%= f.label:商品説明, class:"col-xs-2" %>
          <%= f.text_area :introduction, size:"55x5" %>
        </div>

        <div class="form-group">
          <%= f.label:ジャンル, class:"col-xs-2" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name,{prompt: @product.genre_id} %>
        </div>

        <div class="form-group">
          <%= f.label:税抜価格, class:"col-xs-2" %>
          ¥ <%= f.text_field :price %>
        </div>

        <div class="form-group">
          <%= f.label:販売ステータス, class:"col-xs-2" %>
          <%= f.select :is_active,[["販売中",true],["売り切れ",false]]%>
        </div>

        <div>
          <%= f.submit "変更を保存" , class: "btn btn-primary"%></td>
        </div>
        <% end %>
    </div>
  </div>
</div>
