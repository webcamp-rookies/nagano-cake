<%= link_to "ログアウト管理者 test", destroy_admin_session_path, method: :delete %>

<h1>会員一覧</h1>
<div class="row">
    <div class="col-xs-12">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <%= customer.id %>
            </td>
            <td>
              <%= link_to (customer.last_name + customer.first_name),admin_customer_path(customer.id) %>
              <%=  %> 
            </td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.is_deleted %>
                退会済み
              <% else %>
                有効
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>