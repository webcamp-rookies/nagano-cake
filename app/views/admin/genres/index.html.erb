<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3 class="genre-head">ジャンル一覧・追加</h3>

      <%= render 'genre_errors', genre: @genre %>
      <%= render 'form.genre', genre: @genre %>


      <table class='table genre-table'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th colspan="3"></th>
          </tr>
        </thead>


<!--ここから-->
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <% if genre.is_active == true %>
                <td>有効</td>
              <% elsif genre.is_active == false %>
                <td>無効</td>
              <% end %>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
          <!--ここまで部分テンプレへ-->
        </tbody>
      </table>
    </div>
  </div>
</div>
