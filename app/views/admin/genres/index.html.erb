<div class="container">
  <div class="row">
      <h3>ジャンル一覧・追加</h3>

      <%= render 'genre_errors', genre: @genre %>
      <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <table class="genre_form">
        <tr>
          <th>
            <label for="genre_name">ジャンル</label>
            <%= f.text_field :name %>
          </th>
          <th class="genre_radio">
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効"%>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "無効"%>
          </th>
          <th>
            <%= f.submit "追加", class: "btn btn-primary genre_btn" %>
          </th>
        </tr>
      </table>
    <% end %>

    <table class='table table-hover genre_table'>
      <thead>
        <tr>
          <th>ジャンル</th>
          <th>状態</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <% if genre.is_active == true %>
              <td>有効</td>
            <% elsif genre.is_active == false %>
              <td>無効</td>
            <% end %>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>