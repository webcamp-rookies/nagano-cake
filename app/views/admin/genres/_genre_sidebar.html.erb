<!--customer/products_controllerのtopアクションにgenreを定義-->
<table>
  <thead>
    <th>ジャンル検索</th>
  </thead>
  
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td><%= link_to genres_sort_path(genre) do %><%= genre.name %><% end %></td>
      </tr>
    <% end %>
  </tbody>
 </table>
