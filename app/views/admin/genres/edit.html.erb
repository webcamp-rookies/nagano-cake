<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3>ジャンル編集</h3>

      <%= form_with model: @genre, url: admin_genre_path, class: "genre_edit_form", local:true do |f| %>
        <table class="table genre_edit_box">
          <tr>
            <td class="genre-name">ジャンル</td>
            <td><%= f.text_field :name, class: "genre-edit-field" %></td>
            <td class="genre-edit-radio">
              <%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, "有効"%>
              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, "無効"%>
            </td>
            <td>
              <%= f.submit "変更を保存する", class: "btn btn-primary genre_edit_btn" %>
            </td>
          </tr>
        </table>
      <% end %>

    </div>
  </div>
</div>



