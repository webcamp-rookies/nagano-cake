<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h3>ジャンル編集</h3>

      <%= form_with model: @genre, url: admin_genre_path, class: "genre_edit_form", local:true do |f| %>
        <div class="genre_edit_box">
          <div class="genre_edit_title">
            <label for="genre_name">ジャンル</label>
            <%= f.text_field :name, class: "genre_edit_field" %>
          </div>
          <div class="genre_edit_radio">
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効"%>
            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "無効"%>
          </div>
          <div>
            <%= f.submit "変更を保存する", class: "btn btn-primary genre_edit_btn" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>