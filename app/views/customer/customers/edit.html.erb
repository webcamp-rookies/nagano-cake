<div class="container">
  <div class="row">
    <div class="col-xs-3"></div>
      <div class="col-xs-6">
        <h2 class="head-line title_h2 text-center">登録情報編集</h2>
        <%= form_with(model:@customer, url:customer_path, local: true ,method: :put) do |f| %>
          <table class="table">
            <tbody>
              <tr>
                <td class="form-group col-xs-12">
                  <%= f.label :"氏名" %>
                  <%= f.text_field :last_name %>
                  <%= f.text_field :first_name %>
                </td>
              </tr>
              <tr>
                <td class="form-group col-xs-12">
                  <%= f.label :"フリガナ" %>
                  <%= f.text_field :last_name_kana %>
                  <%= f.text_field :first_name_kana %>
                </td>
              </tr>
              <tr>
                <td class="form-group col-xs-12">
                  <%= f.label :"メールアドレス" %>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                </td>
              </tr>
              <tr>
                <td class="form-group col-xs-12">
                  <%= f.label :"郵便番号" %>
                  <%= f.text_field :postcode %>
                </td>
              </tr>
              <tr>
                <td class="form-group col-xs-12">
                  <%= f.label :"住所" %>
                  <%= f.text_field :city %>
                </td>
              </tr>
              <tr>
                <td class="form-group col-xs-12">
                  <%= f.label :"電話番号(ハイフンなし)" %>
                  <%= f.text_field :phone_number %>
                </td>
              </tr>
            </tbody>
          </table>

          <div class="actions col-xs-9 col-xs-offset-3">
            <%= f.submit "編集内容を保存する", class: "btn btn-primary"%>
            <%= link_to '退会する', quit_customer_path, class: "glyphicon glyphicon-tint btn btn-danger"%>
          </div>
        <% end %>
        <%= link_to "戻る", customer_path(@customer.id), class: "btn btn-primary" %>
      </div>
    <div class="col-xs-3"></div>
  </div>
</div>