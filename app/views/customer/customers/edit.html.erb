<div class="container">
  <div class="row">
    <div class="col-xs-12">
  
      <h2 class="head-line title_h2 text-center">登録情報編集</h2>
  
      <%= form_with(model:@customer, url:customer_path, local: true ,method: :put) do |f| %>
  
        <!--エラーメッセージどうしようか %>-->
  
        <div class="col-xs-10">
          <div class="form-group col-xs-12">
            <%= f.label :"氏名" %>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"フリガナ" %>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"メールアドレス" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"郵便番号" %>
            <%= f.text_field :postcode %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"住所" %>
            <%= f.text_field :city %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"電話番号(ハイフンなし)" %>
            <%= f.text_field :phone_number %>
          </div>
        </div>
  
        <div class="actions col-xs-9 col-xs-offset-3">
          <%= f.submit "編集内容を保存する" %>
          <%= '退会する' %>
        </div>
      <% end %>
      <div class="col-xs-12">
        <%= "戻る" %>
      </div>
    </div>
  </div>
</div>