<div class="container">
  <div class="row">
    <div class="col-xs-3"></div>
    <div class="col-xs-6">
      <h1 class="head-line title_h2 text-center">マイページ</h1>
      <div class="text-right">
        <%= link_to "編集する", edit_customer_path(@customer.id), class: "btn btn-success btn-xs" %>
        <%= link_to "パスワードの変更", edit_customer_registration_path(@customer.id), class: "btn btn-success btn-xs" %>
      </div>

      <table class="my-page-table table">
        <tbody>
          <tr>
            <td class="col-xs-3">氏名</td>
            <td><%= (@customer.last_name + @customer.first_name) %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= (@customer.last_name_kana + @customer.first_name_kana) %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postcode.to_s.insert(3, "-") %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.city %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %> </td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="text-right">
        <%= link_to "配送先一覧を見る", ship_cities_path, class: "btn btn-primary" %>
        <%= link_to"注文履歴一覧を見る",orders_path,class:"btn btn-primary" %>
      </div>
	  </div>
	  <div class="col-xs-3"></div>
  </div>
</div>