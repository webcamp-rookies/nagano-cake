<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'admin/genres/genre_sidebar', genres: @genres  %>
    </div>
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-7">
          <div class="show-image">
			      <%= attachment_image_tag @product, :image, size:'500x400', fallback: 'no_image.jpg', size:'500x400' %>
	        </div>
        </div>
        <div class="col-md-5">
	        <div class="show-content">
            <h2><%= @product.name %></h2><br>
            <p class="product-introduction"><%= @product.introduction %></p>
            <h3>¥<%= (@product.price*1.1).floor.to_s(:delimited) %><span>（税込）</span></h3>


        <% if customer_signed_in? %>
        <%= form_with model: @cart_product, url: cart_products_path, local: true do |f| %>
              <%= f.hidden_field :product_id, :value => @product.id %>
              <%= f.number_field :amount , placeholder: "個数選択", min: 1, max: 50 %>
            	<%= f.submit 'カートに入れる', class: "btn-sm btn-primary" %>
            <% end %>
        <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
