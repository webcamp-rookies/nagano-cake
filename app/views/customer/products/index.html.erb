<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'admin/genres/genre_sidebar', genres: @genres %>
    </div>
    <div class="col-md-9" >
      <h1 class="product-title">
        <% if params[:genre_id] %>
          <%= @genre.name %>
        <% else %>
          すべての商品
        <% end %>
      </h1>
      <strong> 全<%= @products.count %>件 </strong>
      <div class="products-list">
        <% @products.each do |product| %>
          <% if product.genre.is_active == true %>
            <div class="products-list-item">
              <%= link_to product_path(product) do %>
                <%= attachment_image_tag product, :image, fallback: 'no_image.jpg',size: "190x150" %><br>
              <% end %>
              <%= product.name %><br>
              ¥<%= (product.price*1.1).floor.to_s(:delimited)%>(税込)
            </div>
          <% end %>
        <% end %>
      </div>
      <%= paginate @products %>
    </div>
  </div>
</div>
