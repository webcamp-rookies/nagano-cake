<div class="container">
	<div class="row">
		<h2>ショッピングカート</h2>

		<div class="col-lg-12 center-table">
      <% if @cart_products.count == 0 %>
	      <div style="text-align: center;">
	        <h1>カート内に商品はありません</h1>
	        <div class="btn-group btn-group-lg " style="margin-top: 50px;">
	        	<%= link_to "買い物を始める", root_path, class: 'btn btn-primary' %>
	        </div>
	      </div>
      <% else %>

			<div class="text-right">
				<%= link_to cart_products_destroy_all_path, method: :delete do %>
	      	<button class="btn btn-danger">カートを空にする</button>
	    	<% end %>
	  	</div>

	    <div class="cart-product-table">
				<table class="table">
					<thead>
						<tr>
							<th>商品名</th>
							<th>単価（税込）</th>
							<th>数量</th>
							<th>小計</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<% @cart_products.each do |cart_product| %>
						<tr>
							<td>
								<%= attachment_image_tag cart_product.product, :image, size:'100x70', fallback: 'no_image.jpg', size:'100x70' %>
								<%= cart_product.product.name %>
							</td>
	        		<td><%= (cart_product.product.price.to_s(:delimited) ) %></td>
	        		<td>
		            <%= form_with model: cart_product, url: cart_product_path(cart_product), local: true do |f| %>
		              <%= f.text_field :amount, :size => "5" %>
		              <%= f.submit "変更", class:"btn btn-primary"%>
		            <% end %>
	          	</td>
							<td><%= cart_product.subtotal.to_s(:delimited) %></td>
							<td>
	            	<%= link_to "削除する", cart_product_path(cart_product), method: :delete, class: "btn btn-danger" %>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>

			<table class="table">
				<tbody>
					<tr>
						<th></th>
						<th><%= link_to '買い物を続ける', root_path, class:"btn btn-primary" %></th>
						<th></th>
						<th class="lead">合計金額</th>
						<th class="lead"><%= @total_price.floor.to_s(:delimited) %>円</th>
					</tr>
				</tbody>
			</table>
	      <% if current_customer.cart_products.present? %>
			<div>
				<!--pathを直すnew_order_path-->
				<%= link_to "情報入力に進む", products_path, class:"btn btn-lg btn-success btn-block" %>
	      <% end %>
			</div>
			<% end %>
		</div>
	</div>
</div>