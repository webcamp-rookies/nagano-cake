<table class="table">
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= order.postcode %><br/>
          <%= order.city %><br/>
          <%= order.name %>
        </td>
        <td>
        </td>
        <td><%= order.total_fee%>円</td>
        <td></td>
        <td><%= link_to '表示する', order_path(order.id) %></td>
      </tr>
    </tbody>
  <% end %>
</table>
