<div class="row">
  <div class="col-xs-12">
    <h2 class="head-line text-center">注文履歴一覧</h2>
     <table class="table table-hover table-bordered">
       <thead>
         <tr>
           <th>注文日</th>
           <th>配送先</th>
           <th>注文商品</th>
           <th>支払い金額</th>
           <th>ステータス</th>
           <th>注文詳細</th>
         </tr>
       </thead>

       <tbody>
         <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td class="text-left">
              <%= order.postcode %><br >
              <%= order.city %><br >
              <%= order.name %>
            </td>
            <%# end %>
            <%# order_details.each do |order| %>
            <td>
              <%#= order.product.name %>
            </td>
            <td class="text-right">
              <%= order.total_fee %>円
            </td>
            <td>
              <%= order.status %>
            </td>

            <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
          </tr>
          <% end %>
       </tbody>
     </table>
  </div>
</div>