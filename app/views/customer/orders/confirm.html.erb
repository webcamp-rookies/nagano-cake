<div class="row">
  <div class="col-xs-10">
    <h4 class="head-line text-center"></h4>
     <table class="table table-hover table-bordered">
       <thead>
         <tr>
           <th>商品名</th>
           <th>単価（税込）</th>
           <th>数量</th>
           <th>小計</th>
         </tr>
       </thead>
       <tbody>
         <% @cart_products.each do |cart| %>
         <tr>
           <td class="text-left">
             <%= attachment_image_tag(cart.product, :image, :fill, 50, 50, format:'jpeg', fallback:"no_image.jpg", size:"50x50") %>
             <%= cart.product.name %>
           </td>

           <td class="text-right">
             ¥<%= cart.product.price %>
           </td>

           <td class="text-right">
             <%= cart.amount %>
           </td>

           <td class="text-right">
             <%#= 小計　%>
           </td>
         </tr>
        <% end %>
       </tbody>
     </table>
  </div>

  <div class="col-xs-3">
    <table class="table table-hover table-bordered">
      <tr>
        <th>送料</th>
        <td class="text-right col-xs-5"><%= @order.shipping %></th>
      </tr>

      <tr>
        <th>商品合計</th>
        <td class="text-right">¥<%= @total_price %></td>
      </tr>

      <tr>
        <th>請求金額</th>
        <td class="text-right">¥<%= @total_price + 800　 %></td>
      </tr>
    </table>
  </div>

  <div class="col-xs-9">
    <h4>支払い方法</h4>
    <%= @order.payment %>

    <h4>お届け先</h4>
    <%= "#{@order.postcode}#{@order.city}#{@order.name}" %>
  </div>
  <%= f.submit "購入を確定する"　%>
  <% end %>
</div>