<div class="row">
  <div class="col-xs-12">
    <h4 class="head-line text-center">注文情報入力</h4>

    <div class="col-xs-offset-1">
      <%= form_with model:@order, url:orders_confirm_path, method: :post, local:true do |f| %>
       <h4 class="col-xs-3 sub-head text-left">支払い方法</h4>
        <div class="col-xs-10">
          <%= f.radio_button :payment , :"クレジットカード", checked: true %>
          <span>クレジットカード</span>
        </div>
        <div class="col-xs-10">
          <%= f.radio_button :payment , :"銀行振込" %>
          <span>銀行振込</span>
        </div>

        <h4 class="col-xs-3 subhead text-left">お届け先</h4>
          <div class="col-xs-10">
            <%= f.radio_button :ship_city, checked: true %>
            <span>ご自身の住所</span>
            <%= "#{current_customer.postcode}" %>
            <%= "#{current_customer.city}" %>
            <%= "#{current_customer.first_name}" %>
          </div>

          <div class="col-xs-10 text-left">
           <%= f.radio_button :ship_city, "ship_cities" %>
           <span>登録済み住所から選択</span>
           <%= f.collection_select :id, @ship_cities, :id, :order_ship %>
          </div>

        <div class="new-address col-xs-10">
         <%= f.radio_button :ship_city, "ship_cities" %>
        <span>新しいお届け先</span>
        <div class="field form-group col-xs-11">
          <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-4" %>
          <%= f.text_field :postcode, class: "col-sm-3" %>
        </div>

        <div class="field form-group col-xs-11">
          <%= f.label :"住所", class: "col-sm-4" %>
          <%= f.text_field :city, class: "col-sm-4" %>
        </div>

        <div class="field form-group col-xs-11">
          <%= f.label :"宛名", class: "col-sm-4" %>
          <%= f.text_field :name, class: "col-sm-4" %>
        </div>

      </div>
    </div>
     <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>