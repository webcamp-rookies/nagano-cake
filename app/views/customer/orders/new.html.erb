<h3>注文情報入力</h3>

<div class="order-form">
  <%= form_with(model: @order, local: true) do |f| %>

    <p>支払方法<p>
    <div class="field">
        <%= f.radio_button :payment, 0 %>
        <%= f.label :payment, "クレジットカード"  %><br>
        <%= f.radio_button :payment, 1 %>
        <%= f.label :payment, "銀行振込" %><br>
    <p>お届け先<p>
    <div class="field">
      <div class="user-address">
        <%= f.radio_button :ship_cities, 0 %>
        <%= f.label :city, "ご自身の住所", value: 0 %><br>
        <%= @current_customer.postcode %><br />
        <%= @current_customer.city %></br>
        <%= @current_customer.last_name %><%= @current_customer.first_name %>
        <%= f.radio_button :ship_cities, 1 %>
        <%= f.label :city, "登録済の住所"%><br>
        <%= f.collection_select :id, @ship_cities, :id, :order_ship, {prompt: "--選択してください--"} %></br>
      </div>
      <%= f.radio_button :ship_cities, 2 %>
      <%= f.label :ship_cities, "新しいお届け先" %>
      <br>
      <table class="table">
        <tr>
          <th><%= f.label :ship_cities, "郵便番号" %></th>
          <td><%= f.text_field :postcode, class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :ship_cities, "住所" %></th>
          <td><%= f.text_field :ship_cities, class: "form-control" %></td>
        </tr>
        <tr>
          <th><%= f.label :ship_cities, "宛名" %></th>
          <td><%= f.text_field :name, class: "form-control" %></td>
        </tr>
      </table>
      <br>
      <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
    </div>
  <% end %>
</div>
