<h4 class="head-line text-center">注文履歴詳細</h4>
<div clas="row">
  <div class="col-xs-7">
    <table  class="table table-bordered">
      <tbody>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.postcode %></td>
          <td><%= @order.city %></td>
          <td><%= @order.name %></td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.status %></td>
        </tr>
      </tbody>
    </table>
  </div>
    <div class="col-xs-3">
      <h4 class="text-right">請求情報</h4>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%#= %></td>
        </tr>

        <tr>
          <th>配送料</th>
          <td><%= "#{800}" %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_fee %></td>
        </tr>
      </table>

      <div class="col-xs-8">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品</th>
              <th>単価（税込み)</th>
              <th>個数</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <%# @order_details.each do |detail| %>
            <tr>
              <td><%#= detail.product.name %></td>
              <td><%#= detail.product.price %></td>
              <td><%#= detail.amount %></td>
              <td><%#= detail. %></td>
            </tr>
          </tbody>
          <%# end %>
        </table>
      </div>
  </div>
</div>