<div class="row">
 <div class="col-xs-12">
   <h3>配送先登録/一覧</h3>
      <%= form_with model:@ship_city,url:ship_cities_path, local:true do |f| %>

          <h4>郵便番号(ハイフンなし)</h4><%= f.text_field :postcode %>

          <h4>住所</h4><%= f.text_field :city %>

          <h4>宛名</h4><%= f.text_area :name %>
          <%= f.submit '登録する',class: "btn-success" %>
      <% end %>

      <table>
         <thead>
           <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
           </tr>
         </thead>

         <tbody>
          <tr>
           <% @ship_cities.each do |ship_city| %>
            <td><%= ship_city.postcode %></td>
            <td><%= ship_city.city %></td>
            <td><%= ship_city.name %></td>
            <td><%= link_to "編集する", edit_ship_city_path(ship_city) %></td>
            <td><%= link_to "削除する", ship_city_path(ship_city), method: :delete %></td>
            <% end %>
          </tr>
         </tbody>
      </table>
 </div>
</div>