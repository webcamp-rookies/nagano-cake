<table class="table table-bordered table-hover">
         <thead>
           <tr class="info">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
           </tr>
         </thead>

         <tbody>
            <% ship_cities.each do |ship_city| %>
          <tr>
            <td><%= ship_city.postcode %></td>
            <td class="text-left"><%= ship_city.city %></td>
            <td class="text-left"><%= ship_city.name %></td>
            <td><%= link_to "編集する", edit_ship_city_path(ship_city) %></td>
            <td><%= link_to "削除する", ship_city_path(ship_city), method: :delete %></td>
          </tr>
          <% end %>
         </tbody>
</table>