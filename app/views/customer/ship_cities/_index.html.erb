<table class="table table-bordered table-hover">
         <thead>
           <tr class="info">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
           </tr>
         </thead>

         <tbody>
            <% ship_cities.each do |ship_city| %>
          <tr>
            <td><%= ship_city.postcode.to_s.insert(3, "-") %></td>
            <td class="text-left"><%= ship_city.city %></td>
            <td class="text-left"><%= ship_city.name %></td>
            <td class="text-center"><%= link_to "編集する", edit_ship_city_path(ship_city), class: "btn btn-primary" %>
            　　<%= link_to "削除する", ship_city_path(ship_city), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
          <% end %>
         </tbody>
</table>