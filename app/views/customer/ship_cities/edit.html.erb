<div class="container">
<div class="row">
  <!--<div class="col-xs-12">-->
    <%= render 'customer/ship_cities/error', ship_city: @ship_city %>
    <h2 class="head-line text-center title_h2">配送先編集</h2>
    <%= form_with model:@ship_city, url:ship_city_path, local:true do |f| %>

      <div class="col-xs-10">
          <div class="form-group col-xs-12">
            <%= f.label :"郵便番号（ハイフンなし）",class: "col-xs-3" %>
            <%= f.text_field :postcode, class: "col-xs-4" %>
          </div>

          <div class="form-group col-xs-12">
             <%= f.label :"住所", class: "col-xs-3" %>
             <%= f.text_field :city, class: "col-xs-7" %>
          </div>

          <div class="form-group col-xs-12">
           <%= f.label :"宛名", class: "col-xs-3" %>
           <%= f.text_area :name, class: "col-xs-4" %>
          </div>
            <%= f.submit '登録する',class: "col-xs-2 pull-right btn-primary" %>
        <% end %>
      </div>
  <!--</div>-->
</div>
</div>

