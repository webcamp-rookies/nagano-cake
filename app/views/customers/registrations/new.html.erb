<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <table class="table">
    <thead>
    <tr>
      <th>名前</th>
        <td><%= f.text_field :last_name, autofocus: true, class: "form-control" %></td>
        <td><%= f.text_field :first_name, autofocus: true, class: "form-control" %></td>
    </tr>
  　<tr>
      <th>名前(フリガナ)</th>
        <td><%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %></td>
        <td><%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %></td>
    </tr>
    <tr>
      <th>メール</th>
      <td><%= f.email_field :email, autofocus: true, class: "form-control" %></td>
      <td></td>
    </tr>
    <tr>
       <th>郵便番号</th>
       <td><%= f.text_field :postcode, autofocus: true, class: "form-control" %></td>
       <td></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :city, autofocus: true, class: "form-control" %></td>
      <td></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :phone_number, autofocus: true, class: "form-control" %></td>
      <td></td>
    </tr>
    <tr>
      <th>パスワード（6文字以上）</th>
      <td><%= f.password_field :password, autocomplete: "off", class: "form-control" %></td>
      <td></td>
    </tr>
    <tr>
      <th>パスワード（確認用）</th>
      <td><%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></td>
      <td></td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit "新規登録" ,class: "btn btn-success" %>
  </div>
<% end %>

既に登録済みの方は<%= render "customers/shared/links" %>